#player_form
  = form_for(@player) do |f|
    - if @player.errors.any?
      #error_explanation
        %h2= "#{pluralize(@player.errors.count, 'error')} prohibited this user from being saved:"
      
        %ul
          - @player.errors.full_messages.each do |msg|
            %li= msg
  
    .field#name_field
      = f.label :name
      %br
      = f.text_field :name
    .field#timezone_field
      = f.label :timezone
      %br
      = f.text_field :timezone
    .field#comments_field
      = f.label :comments
      %br
      = f.text_area :comments
    .actions
      = f.submit
